        <script>
  const debounce = (func, wait) => {
      let timeout;
      return function (...args) {
          clearTimeout(timeout);
          timeout = setTimeout(() => func.apply(this, args), wait);
      };
  };

  const searchTable = () => {
    const searchValue = document.getElementById("searchInput").value.trim().toLowerCase();
    const tableBody = document.querySelector("#myTable tbody");
    const tableRows = document.querySelectorAll("#myTable tbody tr:not(#no-data-row)");
    let noDataFound = true;

    tableRows.forEach((row) => {
      
        const cells = row.querySelectorAll("td:not(:nth-child(5))"); 
        let rowText = "";

        cells.forEach(cell => {
            rowText += cell.innerText.toLowerCase() + " "; 
        });

        const statusText = row.querySelector("td:nth-child(5) button")?.innerText.toLowerCase() || "";

        if (rowText.includes(searchValue) || statusText === searchValue) {
            row.style.display = "";
            noDataFound = false;
        } else {
            row.style.display = "none";
        }
    });

    let noDataRow = document.getElementById("no-data-row");

    if (noDataFound) {
        if (!noDataRow) {
            noDataRow = document.createElement("tr");
            noDataRow.id = "no-data-row";
            noDataRow.innerHTML = '<td colspan="8" style="text-align: center; font-weight: bold; color: gray;"> No data found</td>';
            tableBody.appendChild(noDataRow);
        }
    } else {
        if (noDataRow) noDataRow.remove();
    }
};

document.getElementById("searchInput").addEventListener("keyup", debounce(searchTable, 300));

       </script>


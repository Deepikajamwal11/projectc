<!DOCTYPE html>
<html class="loading" lang="en" data-textdirection="ltr">
  <%- include('../common/header.ejs'); %>

  <body
    class="vertical-layout vertical-menu-modern navbar-floating footer-static"
    data-open="click"
    data-menu="vertical-menu-modern"
    data-col=""
  >
    <%- include('../common/navbar.ejs'); %> 
    <%- include('../common/sidebar.ejs'); %>

    <div class="app-content content">
      <div class="content-overlay"></div>
      <div class="header-navbar-shadow"></div>
      <div class="content-wrapper">
        <div class="content-header row"></div>
        <div class="content-body">
          <div class="auth-wrapper">
            <div class="auth-inner py-2">
              <div class="card mb-0">
                <div class="card-body">
                  <form class="auth-register-form" method="POST">
                    <div class="row">
                      <% if (data.imagess && data.imagess.length > 0) { %>
                        <% data.imagess.forEach((img) => { %>
                          <div class="col-md-3 mb-2">
                            <img src="<%= img.image %>" 
                                 alt="Work Image" 
                                 style="width: 100%; height: 200px; object-fit: cover; border-radius: 20px;" />
                          </div>
                        <% }); %>
                      <% } else { %>
                        <div class="col-12"><span>No Images</span></div>
                      <% } %>
                    </div>
                    <div class="mb-1">
                      <label class="form-label">Employee Name</label>
                      <input type="text" class="form-control" value="<%= data.assignUsers?.usersss?.name || 'N/A' %>" readonly />
                    </div>
                    
                    <div class="mb-1">
                      <label class="form-label">Project Site</label>
                      <input type="text" class="form-control" value="<%= data.assignUsers?.projectsss?.name || 'N/A' %>" readonly />
                    </div>
                    <div class="mb-1">
                      <label class="form-label">Task</label>
                      <input type="text" class="form-control" value="<%= data.projectTaskss?.workGroup || 'N/A' %>" readonly />
                    </div>
                    <div class="mb-1">
                      <label class="form-label">In Time</label>
                      <input type="text" class="form-control" value="<%= data.clockIn || 'N/A' %>" readonly />
                    </div>
                    <div class="mb-1">
                      <label class="form-label">Date</label>
                      <input type="text" class="form-control" value="<%= data.date || 'N/A' %>" readonly />
                    </div>
                    <div class="mb-1">
                      <label class="form-label">Break</label>
                      <input type="text" class="form-control" value="<%= data.break || 'N/A' %>" readonly />
                    </div>
                    <div class="mb-1">
                      <label class="form-label">Work Type</label>
                      <input type="text" class="form-control" value="<%= data.workType || 'N/A' %>" readonly />
                    </div>
                    <div class="mb-1">
                      <label for="discription" class="form-label">Notes</label>
                      <textarea class="form-control" name="notes" readonly ><%= data.addNotes %></textarea>
                    </div>
                    
                    <div class="d-flex justify-content-end">
                      <a href="/describeworklist" class="btn btn-primary">Back</a>
                    </div>
                      
                  </div>
                 
                  </div>

             
                    
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%- include('../common/footer.ejs'); %>

    <script src="../../../app-assets/vendors/js/vendors.min.js"></script>
    <script src="../../../app-assets/js/core/app-menu.js"></script>
    <script src="../../../app-assets/js/core/app.js"></script>

    <script>
      $(window).on("load", function () {
        if (typeof feather !== "undefined") {
          feather.replace({ width: 14, height: 14 });
        }
      });
    </script>
  </body>
</html>
